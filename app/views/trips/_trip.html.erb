
  <table> 
   <%  trip.selecteds.order(:hour).each do |selected| %>
	<script type="text/javascript">
	puntos.push(["<%=selected.site.name%>",<%= selected.site.latitude %> , <%=selected.site.longitude%>, "<%= selected.site.description %>", "<%=selected.site.image_url%>"]);
	
	</script>
    <tr class="<%= cycle('list_line_odd', 'list_line_even') %>"> 
 
      <td> 
        <%= link_to image_tag(selected.site.image_url, :class => 'list_image'), selected.site %>
      </td> 
 
      <td class="list_description"> 
        <dl> 
          <dt><%= selected.hour.to_s + 'h: ' %> 
              <%=link_to(selected.site.name, selected.site) %></dt> 
          <dd><%= truncate(strip_tags(selected.site.description),
                 :length => 80) %></dd>
        </dl> 
      </td>
 
      <td class="list_actions"> 
        <%= link_to 'Show', selected.site %><br/>
        <%= link_to 'Destroy', selected, 
                    :confirm => 'Are you sure?',
                    :method => :delete %>
      </td> 
    </tr> 
   <% end %>
  </table> 

