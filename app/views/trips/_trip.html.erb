
<div id="selected">
  <table> 
   <%  trip.selecteds.order(:hour).each do |selected| %>
    <tr class="<%= cycle('list_line_odd', 'list_line_even') %>"> 
 
      <td> 
        <%= link_to image_tag((selected.site.image_url == "") ? selected.site.imagen.url : selected.site.image_url, :class => 'list_image'), selected.site %>
      </td> 
 
      <td class="list_description"> 
        <dl> 
          <dt><%= selected.hour.to_s + 'h: ' %> 
              <%=link_to(selected.site.name, selected.site) %></dt> 
          <dd><%= truncate(strip_tags(selected.site.description),
                 :length => 80) %></dd>
        </dl> 
      </td>
 
      <td class="list_actions"> 
        <%= link_to 'Show', selected.site %><br/>
        <%= link_to 'Destroy', selected, 
                    :confirm => 'Are you sure?',
                    :method => :delete %>

      </td> 
    </tr> 
   <% end %>
  </table> 
</div>
