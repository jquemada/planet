            </dl> 
        </td>
    
        <td class="list_actions"> 
            <%= link_to 'Show', trip.site %><br/>
            <%= link_to 'Edit', edit_trip_path(trip) %><br/>
            <%= link_to 'Destroy', trip, 
                    :confirm => 'Are you sure?',
                    :method => :delete %>
        </td>
    </tr>
    
  <% end %>
    
