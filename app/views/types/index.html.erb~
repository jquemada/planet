<div id="site_list"> 
  <h1>Mostrando tipos</h1> 
 
  <table> 
  <% @types.each do |type| %>
    <tr class="<%= cycle('list_line_odd', 'list_line_even') %>"> 
 
      <td class="list_description"> 
        <dl> 
          <dt><%= link_to type.name, type_sites_path(type) %></dt> 
          <dd><%= truncate(strip_tags(type.description),
                 :length => 80) %></dd> 
          <dd><%= "Sitios:"+Site.where("type_id like ?",type.id).count.to_s()%></dd>      
        </dl> 
      </td> 
 
      <td class="list_actions"> 
        <%= link_to 'Show', type %><br/> 
        <%= link_to 'Edit', edit_type_path(type) %><br/> 
        <%= link_to 'Destroy', type, 
                    :confirm => 'Are you sure?',
                    :method => :delete %>
      </td> 
    </tr> 
  <% end %>
  </table> 
</div> 

