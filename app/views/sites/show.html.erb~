
<div id="site">
 
  <h1><%= @site.type.name if @site.type %></h1> 

  <%= image_tag(@site.image_url, :class => 'site_image') %>


  <h3><%= @site.name %></h3> 

  <p><%=sanitize @site.description %></p>

  <% if  Trip.where("site_id like ?",@site.id)==[]%>
  	<%= form_for (@trip) do |f| %>
  	<%= f.number_field :site_id, :value => @site.id, :hidden => true %>
  	<%= f.number_field :position, :value => Trip.count, :hidden => true %>
  	<%= f.submit "Incluir" %>
  	<% end %><br />
  <%end%>
  
</div> 

<p />
<%= link_to 'Edit', edit_site_path(@site) %> |
